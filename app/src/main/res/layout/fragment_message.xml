<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">
        <RelativeLayout
            android:id="@+id/RelativeLayoutSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="70dp"
            android:layout_marginRight="20sp"
            android:background="@drawable/edittext"
            android:drawableLeft="@drawable/ic_baseline_search_24"
            android:hint="Tìm kiếm tin nhắn"
            android:padding="5dp" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:text="@string/txt_message_vi"
            android:textColor="#ffffff"
            android:textSize="32dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20sp"
            android:layout_marginRight="20sp"
            android:src="@drawable/ic_create_new_message" />
        </RelativeLayout>
        <RelativeLayout
            android:background="@drawable/fragment"
            android:layout_marginTop="50dp"
            android:layout_below="@+id/RelativeLayoutSearch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
                >

        </RelativeLayout>


</RelativeLayout>
