<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.uis.LoginActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/ImageViewLogo"
                android:src="@drawable/ic_mail_blue"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="57dp"
                android:layout_width="124dp"
                android:layout_height="124dp"
                />
            <TextView
                android:id="@+id/TextViewLogoTitle"
                android:layout_below="@+id/ImageViewLogo"
                android:textSize="26sp"
                android:textColor="#000000"
                android:text="Trải nghiệm Awesome chat"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="5dp"
                android:layout_width="300dp"
                android:layout_height="31dp"
                />
            <TextView
                android:id="@+id/TextViewLogin"
                android:layout_below="@+id/TextViewLogoTitle"
                android:textStyle="bold"
                android:textColor="#4356B4"
                android:textSize="32sp"
                android:gravity="top"
                android:text="Đăng nhập"
                android:layout_width="155dp"
                android:layout_height="38dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                />
            <RelativeLayout
                android:id="@+id/RelativeLayoutEmailLogin"
                android:layout_below="@+id/TextViewLogin"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:textColor="#999999"
                    android:textSize="14sp"
                    android:text="@string/prompt_email"
                    android:gravity="top"
                    android:id="@+id/textViewEmail"
                    android:layout_width="42dp"
                    android:layout_height="17dp"
                    />
                <EditText
                    android:textColorHint="#000000"
                    android:inputType="textEmailAddress"
                    android:id="@+id/editTextEmailLogin"
                    android:layout_marginTop="24dp"
                    android:hint="yourname@gmail.com"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <ImageView
                    android:layout_marginTop="24dp"
                    android:fillColor="#4356B4"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_mail"
                    android:layout_alignParentRight="true"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_below="@+id/RelativeLayoutEmailLogin"
                android:id="@+id/RelativeLayoutPassLogin"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:textColor="#999999"
                    android:textSize="14sp"
                    android:text="@string/prompt_password"
                    android:gravity="top"
                    android:id="@+id/textViewPass"
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    />
                <EditText
                    android:inputType="textPassword"
                    android:id="@+id/editTextPassLogin"
                    android:layout_marginTop="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <ImageView
                    android:layout_marginTop="24dp"
                    android:fillColor="#4356B4"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_key_1"
                    android:layout_alignParentRight="true"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    />
            </RelativeLayout>
            <TextView
                android:layout_below="@+id/RelativeLayoutPassLogin"
                android:id="@+id/TextViewLosePass"
                android:textColor="#4356B4"
                android:textSize="14sp"
                android:gravity="right|top"
                android:text="@string/txt_forgot_password_vi"
                android:layout_marginLeft="249dp"
                android:layout_marginTop="20dp"
                android:layout_width="103dp"
                android:layout_height="17dp"
                />
            <Button
                android:layout_below="@+id/TextViewLosePass"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:text="@string/txt_login_vi"
                android:layout_centerHorizontal="true"
                android:background="@drawable/custom_button_login"
                android:id="@+id/ButtonLogin"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <Button
                android:layout_below="@+id/ButtonLogin"
                android:textColor="#999999"
                android:text="Chưa có tài khoản?Đăng kí ngay"
                android:background="#ffffff"
                android:textAllCaps="false"
                android:id="@+id/ButtonMoveRegister"
                android:gravity="right|top"
                android:textSize="14sp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="85dp"
                android:layout_width="205dp"
                android:layout_height="17dp"
                />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>