<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
   >
    <data>
        <variable
            name="viewModelEditProfile"
            type="com.rikkei.tranning.chatapp.viewmodels.ProfileViewModel" />
    </data>
    <RelativeLayout
        android:background="@drawable/bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="228dp"
        >
        <ImageButton
            android:onClick="@{()->viewModelEditProfile.removeFragmentClick()}"
            android:layout_marginLeft="12.16dp"
            android:layout_marginTop="64dp"
            android:src="@drawable/ic_back"
            android:layout_alignParentLeft="true"
            android:layout_width="13.68dp"
            android:layout_height="24dp"
            />
        <TextView
            android:textSize="18sp"
            android:layout_marginTop="65dp"
            android:textColor="#ffffff"
            android:text="@string/txt_edit_profile_vi"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            />
        <Button
            android:onClick="@{()->viewModelEditProfile.saveClick()}"
            android:layout_marginRight="12dp"
            android:textSize="16sp"
            android:text="LÆ°u"
            android:textColor="#ffffff"
            android:background="@null"
            android:layout_marginTop="67dp"
            android:layout_alignParentRight="true"
            android:layout_width="50dp"
            android:layout_height="19dp"
            />
    </RelativeLayout>
    <ScrollView
        android:layout_marginTop="133dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <LinearLayout
        android:orientation="vertical"
        android:weightSum="6"
        android:background="@drawable/fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_marginTop="42dp"
                android:layout_width="143dp"
                android:layout_height="143dp"
                android:src="@mipmap/ic_launcher"
                android:layout_centerInParent="true"
                android:id="@+id/CircleImageUserEdit"
                />
            <ImageButton
                android:onClick="@{()->viewModelEditProfile.setImageOnClick()}"
                android:layout_marginLeft="220dp"
                android:layout_marginTop="130dp"
                android:src="@drawable/ic_camera"
                android:background="@null"
                android:layout_width="40dp"
                android:layout_height="40dp"
                />
        </RelativeLayout>
       <RelativeLayout
           android:layout_weight="1"
           android:layout_marginRight="24dp"
           android:layout_marginLeft="24dp"
           android:layout_marginTop="30dp"
           android:layout_width="match_parent"
           android:layout_height="0dp">
           <TextView
               android:textColor="#999999"
               android:textSize="12sp"
               android:text="@string/txt_name_vi"
               android:gravity="top"
               android:layout_width="73dp"
               android:layout_height="17dp"
               />
           <EditText
               android:textSize="16sp"
               android:text="Awesome Chat"
               android:inputType="textEmailAddress"
               android:id="@+id/editTextNameProfile"
               android:layout_marginTop="24dp"
               android:textColor="#000000"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               />
           <ImageView
               android:layout_marginTop="24dp"
               android:fillColor="#4356B4"
               android:scaleType="fitXY"
               android:src="@drawable/ic_user"
               android:layout_alignParentRight="true"
               android:layout_width="16dp"
               android:layout_height="16dp"
               />
       </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_marginRight="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="32dp"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:textColor="#999999"
                android:textSize="12sp"
                android:text="@string/txt_phone_vi"
                android:gravity="top"
                android:layout_width="120dp"
                android:layout_height="14dp"
                />
            <EditText
                android:textSize="16sp"
                android:text="0912345678"
                android:inputType="number"
                android:id="@+id/editPhoneProfile"
                android:layout_marginTop="24dp"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <ImageView
                android:layout_marginTop="24dp"
                android:fillColor="#4356B4"
                android:scaleType="fitXY"
                android:src="@drawable/ic_phone"
                android:layout_alignParentRight="true"
                android:layout_width="16dp"
                android:layout_height="16dp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_marginRight="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="32dp"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:textColor="#999999"
                android:textSize="12sp"
                android:text="@string/txt_date_of_birth_vi"
                android:gravity="top"
                android:layout_width="120dp"
                android:layout_height="14dp"
                />
            <EditText
                android:textSize="16sp"
                android:text="08/04/1992"
                android:inputType="date"
                android:id="@+id/editDateOfBirthProfile"
                android:layout_marginTop="24dp"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <ImageView
                android:layout_marginTop="24dp"
                android:fillColor="#4356B4"
                android:scaleType="fitXY"
                android:src="@drawable/ic_dateofbirth"
                android:layout_alignParentRight="true"
                android:layout_width="16dp"
                android:layout_height="16dp"
                />
        </RelativeLayout>
    </LinearLayout>
    </ScrollView>
    </RelativeLayout>
</layout>