<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <data>
        <variable
            name="viewModelProfile"
            type="com.rikkei.tranning.chatapp.views.uis.profile.ProfileViewModel" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <FrameLayout
            android:id="@+id/FrameLayoutEditProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    <ImageView
        android:layout_below="@+id/FrameLayoutEditProfile"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/ImageViewImageUser"
        android:layout_width="match_parent"
        android:layout_height="519dp"
        />
    <LinearLayout
        android:layout_below="@+id/FrameLayoutEditProfile"
        android:weightSum="6"
        android:background="@drawable/fragment"
        android:orientation="vertical"
        android:layout_marginTop="259dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/CircleImageViewUser"
                android:layout_width="69dp"
                android:layout_height="96dp"
                android:layout_marginTop="29dp"
                android:layout_marginLeft="12dp"
                android:src="@mipmap/ic_launcher"
                >
            </de.hdodenhof.circleimageview.CircleImageView>
            <TextView
                android:textColor="#000000"
                android:ellipsize="end"
                android:lines="1"
                android:layout_marginRight="40dp"
                android:text="Nguyễn Quỳnh Trang"
                android:textStyle="bold"
                android:textSize="22sp"
                android:id="@+id/TextViewNameUser"
                android:layout_marginTop="38dp"
                android:layout_marginLeft="13dp"
                android:layout_toRightOf="@+id/CircleImageViewUser"
                android:layout_width="match_parent"
                android:layout_height="26dp"/>
            <TextView
                android:text="abc@gmail.com"
                android:textColor="#999999"
                android:textSize="16sp"
                android:layout_marginTop="3dp"
                android:id="@+id/TextViewEmailUser"
                android:layout_marginLeft="13dp"
                android:layout_toRightOf="@+id/CircleImageViewUser"
                android:layout_below="@+id/TextViewNameUser"
                android:layout_width="182dp"
                android:layout_height="19dp"
                />
            <ImageButton
                android:onClick="@{()->viewModelProfile.replaceFragmentClick()}"
                android:id="@+id/ImageButtonEditProfile"
                android:src="@drawable/ic_edit"
                android:layout_marginRight="11.98dp"
                android:layout_marginTop="42dp"
                android:layout_alignParentRight="true"
                android:layout_width="18dp"
                android:layout_height="18dp"
                />
            <TextView
                android:background="#999999"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <ImageView
                android:id="@+id/ImageViewLanguage"
                android:src="@drawable/ic_global"
                android:foregroundGravity="center"
                android:layout_marginLeft="12dp"
                android:layout_width="24sp"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/TextViewTitleLanguage"
                android:text="@string/txt_language_title_vi"
                android:textColor="#000000"
                android:textSize="18sp"
                android:layout_marginLeft="18dp"
                android:layout_toRightOf="@+id/ImageViewLanguage"
                android:layout_width="79dp"
                android:gravity="center_vertical"
                android:layout_height="match_parent"
                />
            <TextView
                android:id="@+id/TextViewLanguage"
                android:textSize="16sp"
                android:textColor="#4356B4"
                android:text="Tiếng Việt"
                android:layout_marginLeft="136dp"
                android:gravity="center"
                android:layout_toRightOf="@+id/TextViewTitleLanguage"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                />
            <ImageButton
                android:src="@drawable/ic_next"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12.4dp"
                android:foregroundGravity="center"
                android:layout_width="7.19dp"
                android:layout_height="match_parent"
                />
            <TextView
                android:background="#999999"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            >
            <ImageView
                android:id="@+id/ImageViewNotification"
                android:layout_marginLeft="12dp"
                android:src="@drawable/ic_notification"
                android:layout_width="19dp"
                android:foregroundGravity="center"
                android:layout_height="match_parent"
                />
            <TextView
                android:text="@string/txt_notification_title_vi"
                android:textColor="#000000"
                android:textSize="18sp"
                android:layout_marginLeft="23dp"
                android:gravity="center_vertical"
                android:layout_toRightOf="@+id/ImageViewNotification"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                />
            <ImageButton
                android:src="@drawable/ic_next"
                android:layout_marginRight="12.4dp"
                android:foregroundGravity="center"
                android:layout_alignParentRight="true"
                android:layout_width="7.19dp"
                android:layout_height="match_parent"
                />
            <TextView
                android:background="#999999"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            >
            <ImageView
                android:layout_marginLeft="12dp"
                android:foregroundGravity="center"
                android:src="@drawable/ic_version"
                android:id="@+id/ImageViewVersion"
                android:layout_width="24dp"
                android:layout_height="match_parent"/>
            <TextView
                android:text="@string/txt_version_vi"
                android:textColor="#000000"
                android:textSize="18sp"
                android:layout_marginLeft="18dp"
                android:gravity="center_vertical"
                android:layout_toRightOf="@+id/ImageViewVersion"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                />
            <TextView
                android:textColor="#999999"
                android:textSize="16sp"
                android:text="1.00"
                android:gravity="center"
                android:layout_marginRight="12dp"
                android:layout_alignParentRight="true"
                android:layout_width="36dp"
                android:layout_height="match_parent"
                />
            <TextView
                android:background="#999999"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:onClick="@{()->viewModelProfile.logoutClick()}"
            android:id="@+id/RelativeLayoutLogout"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            >
            <ImageView
                android:foregroundGravity="center"
                android:layout_marginLeft="12dp"
                android:src="@drawable/ic_logout"
                android:id="@+id/ImageViewLogout"
                android:layout_width="24dp"
                android:layout_height="match_parent"
                />
            <TextView
                android:textColor="#C92323"
                android:textSize="18sp"
                android:text="@string/txt_logout_vi"
                android:layout_marginLeft="18dp"
                android:gravity="center"
                android:layout_toRightOf="@+id/ImageViewLogout"
                android:layout_width="82dp"
                android:layout_height="match_parent"
                />
        </RelativeLayout>
    </LinearLayout>
    </RelativeLayout>
</layout>